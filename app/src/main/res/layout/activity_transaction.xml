<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transaction">

    <include
        android:id="@+id/include4"
        layout="@layout/toolbar" />

    <EditText
        android:id="@+id/transactionUserName"
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/detailsbox"
        android:hint="    User Name"
        android:textColor="@color/lightViolet"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginTop="100dp"
        android:text="Transaction"
        android:textSize="25dp"
        android:textColor="@color/lightViolet"
        android:textAlignment="center"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="371dp"
        android:layout_height="33dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include4"
        app:srcCompat="@drawable/line" />

    <EditText
        android:id="@+id/transactionAmount"
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:layout_marginTop="320dp"
        android:ems="10"
        android:hint="    Amount"
        android:inputType="number"
        android:background="@drawable/detailsbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transact"
        android:layout_width="134dp"
        android:layout_height="33dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/btnbgk"
        android:text="Pay"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <include layout="@layout/nav_drawer" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>