<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".HomePage">
    <include
        layout="@layout/toolbar"/>


    <TextView
        android:id="@+id/userName"
        android:layout_width="319dp"
        android:layout_height="75dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/lightViolet"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:text="Total Balance"
        android:textAlignment="center"
        android:textColor="#1be049"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.156" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:text="You Owe"
        android:textAlignment="center"
        android:textColor="#f23542"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.156" />

    <TextView
        android:id="@+id/balance"
        android:layout_width="121dp"
        android:layout_height="31dp"
        android:text=""
        android:textSize="20dp"
        android:textColor="@color/lightViolet"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dueAmount"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/dueAmount"
        android:layout_width="121dp"
        android:layout_height="31dp"
        android:text=""
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/lightViolet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/split"
        android:layout_width="125dp"
        android:layout_height="105dp"
        android:drawableTop="@drawable/baseline_balance_24"
        android:drawablePadding="20dp"
        android:text="Do a Split"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="@drawable/btnbgk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance"
        app:layout_constraintVertical_bias="0.341" />

    <TextView
        android:id="@+id/pay"
        android:layout_width="125dp"
        android:layout_height="105dp"
        android:layout_marginStart="72dp"
        android:background="@drawable/btnbgk"
        android:drawableTop="@drawable/baseline_wallet_24"
        android:drawablePadding="20dp"
        android:text="Pay"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/split"
        app:layout_constraintTop_toBottomOf="@+id/dueAmount"
        app:layout_constraintVertical_bias="0.341" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <include layout="@layout/nav_drawer" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>